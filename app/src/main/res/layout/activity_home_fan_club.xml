<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.basejavaandroid.ui.mallclub.FanClubViewmodel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mallclub.HomeFanClubActivity">

        <ImageView
            android:id="@+id/ivBG"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_home_club"
            app:layout_constraintDimensionRatio="1:0.7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/toolBar"
                layout="@layout/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></include>
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivHand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hand"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout"
            app:layout_constraintWidth_percent="0.3333333333" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guildlineVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tvReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="Mall Fanclub Review"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guildlineVertical"
            app:layout_constraintTop_toBottomOf="@+id/ivHand" />

        <View
            android:id="@+id/viewReview"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/boder_line"
            app:layout_constraintEnd_toEndOf="@id/tvReview"
            app:layout_constraintStart_toStartOf="@id/tvReview"
            app:layout_constraintTop_toBottomOf="@id/tvReview" />

        <TextView
            android:id="@+id/tvMyReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:text="Review của tôi"
            android:textColor="@color/white"
            android:textSize="@dimen/sizeTitle"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/guildlineVertical"
            app:layout_constraintTop_toBottomOf="@+id/ivHand" />

        <View
            android:id="@+id/viewMyReview"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/boder_line"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@id/tvMyReview"
            app:layout_constraintStart_toStartOf="@id/tvMyReview"
            app:layout_constraintTop_toBottomOf="@id/tvMyReview" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_viewpager"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewMyReview">

            <FrameLayout
                android:id="@+id/containerFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>